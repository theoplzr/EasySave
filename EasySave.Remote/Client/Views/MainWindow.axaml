<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:EasySave.Remote.Client.ViewModels"
        x:Class="EasySave.Remote.Client.Views.MainWindow"
        x:DataType="vm:RemoteViewModel"
        Title="Console Déportée - EasySave"
        Width="600" Height="400">
  <Window.DataContext>
    <vm:RemoteViewModel/>
  </Window.DataContext>
  <StackPanel Margin="20" Spacing="10">
    <TextBlock Text="{Binding StatusMessage}" FontSize="14"/>
    <Button Content="Connecter" Command="{Binding ConnectCommand}" />
    <Button Content="Lister les jobs" Command="{Binding ListJobsCommand}" />
    <Button Content="Exécuter tous les jobs" Command="{Binding ExecuteCommand}" />
    <Button Content="Pause" Command="{Binding PauseCommand}" />
    <Button Content="Reprendre" Command="{Binding ResumeCommand}" />
  </StackPanel>
</Window>
