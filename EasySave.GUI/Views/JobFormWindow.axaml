<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:EasySave.GUI.ViewModels"
        x:Class="EasySave.GUI.Views.JobFormWindow"
        x:DataType="vm:JobFormViewModel"
        Title="Job Form" Width="400" Height="300">

    <StackPanel Margin="10">
        <TextBlock Text="Job Name:"/>
        <TextBox Text="{Binding Name}" />

        <TextBlock Text="Source Directory:"/>
        <TextBox Text="{Binding SourceDirectory}" />

        <TextBlock Text="Target Directory:"/>
        <TextBox Text="{Binding TargetDirectory}" />

        <TextBlock Text="Backup Type:"/>
        <ComboBox SelectedItem="{Binding BackupType}" ItemsSource="{Binding BackupTypes}" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}" Margin="5"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
