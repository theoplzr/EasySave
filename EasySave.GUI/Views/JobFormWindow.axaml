<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:EasySave.GUI.ViewModels"
        x:Class="EasySave.GUI.Views.JobFormWindow"
        x:DataType="vm:JobFormViewModel"
        Title="Add/Edit Job"
        Width="400" Height="300">

    <StackPanel Margin="10" Spacing="10">
        <TextBlock Text="Job Name"/>
        <TextBox Text="{Binding Name}"/>

        <TextBlock Text="Source Directory"/>
        <TextBox Text="{Binding SourceDirectory}"/>

        <TextBlock Text="Target Directory"/>
        <TextBox Text="{Binding TargetDirectory}"/>

        <TextBlock Text="Backup Type"/>
        <ComboBox SelectedItem="{Binding BackupType}" ItemsSource="{Binding BackupTypes}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Command="{Binding SaveCommand}" Content="Save" Margin="5"/>
            <Button Command="{Binding CancelCommand}" Content="Cancel" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
