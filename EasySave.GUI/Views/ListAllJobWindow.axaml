<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:EasySave.GUI.ViewModels"
        xmlns:converters="clr-namespace:EasySave.GUI.Converters"
        x:Class="EasySave.GUI.Views.ListAllJobWindow"
        x:DataType="vm:ListAllJobViewModel"
        Title="All Backup Jobs" Width="600" Height="450">

    <Window.Resources>
        <SolidColorBrush x:Key="SelectedItemBackground" Color="#5555AA"/>
        <!-- Convertisseur pour désactiver le bouton Remove si aucun élément n'est sélectionné -->
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
    </Window.Resources>

    <StackPanel Margin="20">
        
        <TextBlock Text="All Backup Jobs" FontSize="22" FontWeight="Bold" Foreground="White" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>
        
        <TextBlock Text="All Jobs List" FontWeight="Bold" Margin="0,0,0,5"/>

        <Border Background="#2E2E2E" CornerRadius="8" Padding="5">
            <ListBox ItemsSource="{Binding BackupJobs}" 
                     SelectedItem="{Binding SelectedBackupJob, Mode=TwoWay}" 
                     MaxHeight="300" ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Background="#3C3C3C" Foreground="White" BorderBrush="Gray" BorderThickness="1"
                     Margin="0,0,0,10">

                <ListBox.Styles>
                    <Style Selector="ListBoxItem:selected">
                        <Setter Property="Background" Value="{StaticResource SelectedItemBackground}"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </ListBox.Styles>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" CornerRadius="5" Margin="5">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" Foreground="White"/>
                                <TextBlock Text="{Binding SourceDirectory}" FontSize="12" Foreground="LightGray"/>
                                <TextBlock Text="{Binding TargetDirectory}" FontSize="12" Foreground="LightGray"/>
                                <TextBlock Text="{Binding BackupType}" FontStyle="Italic" Foreground="LightBlue"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Remove" Command="{Binding RemoveCommand}" Margin="5"
                    Background="#D9534F" Foreground="White" Padding="8,5" Width="80"
                    CornerRadius="5" IsEnabled="{Binding SelectedBackupJob, Converter={StaticResource NullToBoolConverter}}"/>
            
            <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="5"
                    Background="#5BC0DE" Foreground="White" Padding="8,5" Width="80"
                    CornerRadius="5"/>
        </StackPanel>
    </StackPanel>
</Window>
